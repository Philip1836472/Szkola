{
  "name": "mp3-player",
  "version": "1.0.0",
  "description": "MP3 Player",
  "main": "dist/main.js",
  "keywords": [
    "MP3",
    "Audio", 
    "Sounds",
    "Custom"
  ],
  "license": "ISC",
  "author": "Filip Zawierucha",
  "type": "commonjs",
  "scripts": {
    "build:frontend": "cd src/frontend && vite build --outDir ../../dist --emptyOutDir --base ./",
    "build:backend": "tsc -p tsconfig.backend.json",
    
    "build": "npm run build:frontend && npm run build:backend",
    "electron": "electron .",
    "start": "npm run build && npm run electron"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.2",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.36.0",
    "install": "^0.13.0",
    "nodemon": "^3.1.10",
    "npm": "^11.6.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "wavesurfer.js": "^7.0.0"
  }
}
